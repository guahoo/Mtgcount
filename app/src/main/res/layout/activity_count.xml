<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Activity.CountPlayer4Activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numberCount3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:maxLength="2"
            android:rotation="180"
            android:text="20"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="85sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/plusButton4"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginRight="125dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/orangeplus" />

        <ImageButton
            android:id="@+id/minusButton4"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/orangeminus" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/minusButton1"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginEnd="125dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/greyminus" />


        <ImageButton
            android:id="@+id/plusButton1"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginBottom="35dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/greyplus" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numberCount1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:maxLength="2"
            android:text="20"
            android:textColor="@android:color/black"
            android:textSize="85sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/cubickButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="50dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/huyubick" />

        <ImageButton
            android:id="@+id/renewButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/renew" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical|center_horizontal|center"
        android:orientation="vertical">


        <Button
            android:id="@+id/settingsButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_states"
            android:text="New    Game"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/save"
            android:baselineAligned="false" />
        </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cubicView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/n00" />

        <ImageView
            android:id="@+id/cubicView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/n00" />
    </LinearLayout>


</RelativeLayout>